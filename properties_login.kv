Screen:
    MDCard:
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        size_hint: None, None
        size: 400, 450
        elevation: 4
        padding: 0
        spacing: 0
        orientation: 'vertical'

        FloatLayout:
            MDIconButton:
                pos_hint: {"center_x": 0.5, 'center_y': 0.88}
                icon: 'account-circle'
                icon_size: 70
                on_press: app.change_theme()
            MDTextField:
                id: user
                pos_hint: {"center_x": 0.5, 'center_y': 0.7}
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'name'
                icon_right: 'account-edit'
                max_length_text_color: 'blue'
                max_text_length: 60
                required: True
            MDTextField:
                pos_hint: {"center_x": 0.5, 'center_y': 0.55}
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Email'
                validator: 'email'
                icon_right: 'email'
                required: True
            MDTextField:
                pos_hint: {"center_x": 0.5, 'center_y': 0.4}
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Password'
                icon_right: 'eye-off'
                password: True
                required: True
            MDTextButton:
                id: fg_pass
                pos_hint: {"center_x": 0.5, 'center_y': 0.28}
                text: 'Forgot password?'
                color: '#2096f2'
